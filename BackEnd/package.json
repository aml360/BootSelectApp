{
	"name": "back-end",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"nest": "nest",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"build:compiled": "nest build && ncc build -m dist/BackEnd/src/main.js && rm -rf dist/BackEnd dist/sharedCode ",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"compodoc": "npm compodoc -p tsconfig.json -s",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "NODE_ENV=production node dist/BackEnd/src/main",
		"start:prod_compiled": "NODE_ENV=production node dist/index",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migration:generate": "npm run typeorm -- migration:generate --config ./orm.config.json --name",
		"migration:run": "npm run typeorm -- migration:run --config ./orm.config.json",
		"migration:revert": "npm run typeorm -- migration:revert --config ./orm.config.json",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
	},
	"dependencies": {
		"@aml360/nestjs-compression": "^6.0.103",
		"@nestjs/axios": "^0.0.1",
		"@nestjs/common": "^8.0.6",
		"@nestjs/core": "^8.0.6",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.0.1",
		"@nestjs/platform-express": "^8.0.6",
		"@nestjs/serve-static": "^2.2.2",
		"@nestjs/swagger": "^5.0.9",
		"@nestjs/typeorm": "^8.0.2",
		"bcrypt": "^5.0.1",
		"build": "^0.1.4",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"cookie": "^0.4.1",
		"date-fns": "^2.23.0",
		"lodash": "^4.17.21",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"pg": "^8.7.1",
		"pnpm": "^6.15.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"run": "^1.4.0",
		"rxjs": "^7.3.0",
		"swagger-ui-express": "^4.1.6",
		"typeorm": "^0.2.37"
	},
	"devDependencies": {
		"@compodoc/compodoc": "^1.1.14",
		"@nestjs/cli": "^8.1.1",
		"@nestjs/schematics": "^8.0.3",
		"@nestjs/testing": "^8.0.6",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie": "^0.4.1",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.0.1",
		"@types/lodash": "^4.14.173",
		"@types/node": "^16.7.5",
		"@types/nodemailer": "^6.4.4",
		"@types/passport-jwt": "^3.0.6",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.29.3",
		"@typescript-eslint/parser": "^4.29.3",
		"@vercel/ncc": "^0.30.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.1",
		"jest": "^27.1.0",
		"prettier": "^2.3.2",
		"supertest": "^6.1.6",
		"ts-jest": "^27.0.5",
		"ts-loader": "^9.2.5",
		"ts-node": "^10.2.1",
		"tsconfig-paths": "^3.11.0",
		"typescript": "^4.4.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"config": {
		"commitizen": {
			"path": "./BackEnd/node_modules/cz-conventional-changelog",
			"maxHeaderWidth": 95
		}
	}
}
